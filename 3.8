#include <stdio.h>
#include <stdlib.h>
#include <math.h>
 //
int main()
{
    double a, b;
    scanf("%lf", &a);
    scanf("%lf", &b);

    double mid = a + (b - a) / 2;

         if ((a == 0) || (b == 0) || (mid == 0))
    {
        printf("0");
        return;
    }

    while ((mid - a) >= pow(10, -10))
    {
        if ((((tan(a) - a) < 0) && (tan(mid) - mid) > 0) || ((((tan(a) - a) > 0) && (tan(mid) - mid) < 0)))
        {
            b = mid;
            mid = a + (b - a) / 2;
        }
        else
        {
            a = mid;
            mid = a + (b - a) / 2;
        }
    }

    printf("%lf", mid);
    return 0;
}
